{% extends 'layout.html.twig' %}

{% block title %}Editar Contenido de Usuario de Sección{% endblock %}

{% block content %}
    <div class="columns is-align-items-center head">
        <div class="column is-narrow">
            <img src="{{ asset('images/logos/arcarus_purple.png') }}" alt="logo" class="image is-64x64">
        </div>
        <div class="column">
            <h1 class="title">Editar Contenido de Usuario de Sección</h1>
        </div>
        <div class="column has-text-right">
            <a href="{{ path('class_picture_sections', { 'id': userSectionContent.sectionContent.classPicture.id }) }}" class="button is-dark">
                <i class="fas fa-arrow-left"></i>
                Volver
            </a>
        </div>
    </div>
    <div class="box">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="button is-link">{{ 'save' | trans({}, 'home') }}</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
