{% extends 'layout.html.twig' %}

{% block title %}Secciones de la Orla{% endblock %}

{% block content %}
    <div class="columns is-align-items-center head">
        <div class="column is-narrow">
            <img src="{{ asset('images/logos/arcarus_purple.png') }}" alt="logo" class="image is-64x64">
        </div>
        <div class="column">
            <h1 class="title">Secciones de la Orla</h1>
        </div>
        <div class="column has-text-right">
            <a href="{{ path('class_pictures') }}" class="button is-dark">
                <i class="fas fa-arrow-left"></i>
                Volver
            </a>
        </div>
    </div>
    {% for message in app.flashes('success') %}
        <div class="notification is-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="notification is-danger">{{ message }}</div>
    {% endfor %}
    <div class="columns is-multiline">
        {% for section in sections %}
            <div class="column is-full-mobile is-half-tablet is-one-third-desktop">
                <div class="card">
                    <div class="card-content">
                        <p class="title is-4">{{ section.title }}</p>
                        <div class="content">
                            <p><strong>ID:</strong> {{ section.id }}</p>
                        </div>
                    </div>
                    <footer class="card-footer">
                        <a href="{{ path('section_options', {'id': section.id}) }}" class="card-footer-item button is-primary is-fullwidth">Editar Secci√≥n</a>
                    </footer>
                </div>
            </div>
        {% else %}
            <div class="column is-full">
                <div class="notification is-info">
                    No se encontraron secciones.
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
