{% extends 'layout.html.twig' %}

{% block title %}Elige opci贸n de exportaci贸n{% endblock %}

{% block content %}
    <div class="columns is-align-items-center head">
        <div class="column is-narrow">
            <img src="{{ asset('images/logos/arcarus_purple.png') }}" alt="logo" class="image is-64x64">
        </div>
        <div class="column">
            <h1 class="title">Elige opci贸n de exportaci贸n</h1>
        </div>
        <div class="column has-text-right">
            <a href="{{ path('class_pictures') }}" class="button is-dark">
                <i class="fas fa-arrow-left"></i>
                Volver
            </a>
        </div>
    </div>
    <div class="container">
        <form action="{{ path('class_picture_handle_export', {'id': id}) }}" method="post" enctype="multipart/form-data">
            <div class="field">
                <label class="label">Exportar con plantilla existente</label>
                <div class="control">
                    <label class="radio">
                        <input type="radio" name="export_option" value="template" checked> Usar plantilla existente
                    </label>
                </div>
            </div>
            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MENTOR') or is_granted('ROLE_PROFESSOR')%}
                <div class="field">
                    <label class="label">Subir PDF personalizado como fondo</label>
                    <div class="control">
                        <label class="radio">
                            <input type="radio" name="export_option" value="custom_pdf"> Subir PDF personalizado
                        </label>
                        <div class="file is-info mt-2">
                            <label class="file-label">
                                <input class="file-input" type="file" name="custom_pdf_file" accept="application/pdf">
                                <span class="file-cta">
                                    <span class="file-icon">
                                        <i class="fas fa-upload"></i>
                                    </span>
                                    <span class="file-label">
                                        Elige un archivo PDF...
                                    </span>
                                </span>
                            </label>
                        </div>
                    </div>
                </div>
            {% endif %}
            <div class="field">
                <div class="control">
                    <button type="submit" class="button is-primary">Exportar</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
