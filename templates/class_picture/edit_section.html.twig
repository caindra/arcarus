{% extends 'layout.html.twig' %}

{% block title %}Editar Sección{% endblock %}

{% block content %}
    <div class="columns is-align-items-center head">
        <div class="column is-narrow">
            <img src="{{ asset('images/logos/arcarus_purple.png') }}" alt="logo" class="image is-64x64">
        </div>
        <div class="column">
            <h1 class="title">Editar Sección</h1>
        </div>
        <div class="column has-text-right">
            <a href="{{ path('class_picture_sections', { 'id': sectionContent.classPicture.id }) }}" class="button is-dark">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-arrow-left">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M5 12l14 0" />
                    <path d="M5 12l6 6" />
                    <path d="M5 12l6 -6" />
                </svg>
                Volver
            </a>
        </div>
    </div>
    <div class="form box">
        {{ form_start(sectionContentForm) }}
        {{ form_widget(sectionContentForm) }}
        <button type="submit" class="button is-link">{{ 'save' | trans({}, 'home') }}</button>
        {{ form_end(sectionContentForm) }}
    </div>

    {% if userSectionContentForms is not empty %}
        <h2 class="title is-4">Contenido de Usuario de la Sección</h2>
        {% for userSectionContentForm in userSectionContentForms %}
            <div class="form box">
                {{ form_start(userSectionContentForm) }}
                {{ form_widget(userSectionContentForm) }}
                <button type="submit" class="button is-link">{{ 'save' | trans({}, 'home') }}</button>
                {{ form_end(userSectionContentForm) }}
            </div>
        {% endfor %}
    {% endif %}
{% endblock %}
