{% extends 'layout.html.twig' %}

{% block content %}
    <section class="section content">
        <div class="container">
            <div class="columns is-align-items-center head">
                <div class="column is-narrow">
                    <img src="{{ asset('images/logos/arcarus_purple.png') }}" alt="logo" class="image is-64x64">
                </div>
                <div class="column">
                    <h1 class="title">{{ 'template.delete.title' | trans({}, 'templates') }}</h1>
                </div>
                <div class="column">
                    <a href="{{ path('templates') }}" class="button is-dark">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-arrow-left"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M5 12l14 0" /><path d="M5 12l6 6" /><path d="M5 12l6 -6" /></svg>
                        {{ 'going_back' | trans({}, 'home') }}
                    </a>
                </div>
            </div>
        </div>
        <div class="notification is-danger">
            {{ 'template.delete.text' | trans({}, 'templates') }}
            <form method="post">
                <button type="submit" name="confirmar" class="button is-danger is-dark is-right">{{ 'confirm' | trans({}, 'home') }}</button>
            </form>
        </div>
    </section>
{% endblock %}

