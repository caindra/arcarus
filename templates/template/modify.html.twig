{% extends 'layout.html.twig' %}

{% block content %}
    <div class="columns is-align-items-center head">
        <div class="column is-narrow">
            <img src="{{ asset('images/logos/arcarus_purple.png') }}" alt="logo" class="image is-64x64">
        </div>
        <div class="column">
            <h1 class="title">{{ 'modify.title' | trans({}, 'templates') }}</h1>
        </div>
        <div class="column">
            <a href="{{ path('templates') }}" class="button is-dark">
                <span class="icon">
                    <i class="fas fa-arrow-left"></i>
                </span>
                {{ 'going_back' | trans({}, 'home') }}
            </a>
        </div>
    </div>

    <div class="form box">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <div class="field is-grouped">
            <div class="control">
                <button type="submit" class="button is-link">
                    <span class="icon">
                        <i class="fas fa-save"></i>
                    </span>
                    {{ 'save' | trans({}, 'home') }}
                </button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block title %}
    {{ 'modify.title.student' | trans({}, 'users') }}
{% endblock %}
