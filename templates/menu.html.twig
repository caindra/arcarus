{% trans_default_domain 'menu.es.yml' %}
<div class="dashboard is-full-height">
    <!-- left panel -->
    <div class="dashboard-panel is-one-quarter">
        <aside class="menu" id="sidebarMenu">
            <div class="has-text-centered">
                <a href="{{ path('main') }}">
                    <img src="{{ asset('images/logos/logo_1080_pink_white.png') }}" alt="logo menu" class="image is-64x64" style="margin-top: 20px; margin-bottom: 20px;">
                </a>
            </div>
            <p class="menu-label">{{ 'label.class_picture' | trans({}, 'menu') }}</p>
            <ul class="menu-list">
                <li class="menu-item"><a href="{{ path('create_user_picture') }}">{{ 'class_picture.user' | trans({}, 'menu') }}</a></li>
                <li class="menu-item"><a href="{{ path('groups') }}">{{ 'list.groups' | trans({}, 'menu') }}</a></li>
                <li class="menu-item"><a href="{{ path('class_picture_select_group') }}">{{ 'list.groups.create.classPicture' | trans({}, 'menu') }}</a></li>
                <li class="menu-item"><a href="{{ path('class_pictures') }}">{{ 'class_picture.watch' | trans({}, 'menu') }}</a></li>
            </ul>
            <p class="menu-label">{{ 'label.administration' | trans({}, 'menu') }}</p>
            <ul class="menu-list">
                <li class="menu-item"><a href="{{ path('users') }}">{{ 'administration.user' | trans({}, 'menu') }}</a></li>
                <li class="menu-item"><a href="{{ path('templates') }}">{{ 'administration.template' | trans({}, 'menu') }}</a></li>
                <li class="menu-item"><a href="{{ path('general') }}">{{ 'administration.config' | trans({}, 'menu') }}</a></li>
            </ul>
            <p class="menu-label">{{ 'label.help' | trans({}, 'menu') }}</p>
            <ul class="menu-list">
                <li class="menu-item"><a href="{{ path('help') }}">{{ 'help.info' | trans({}, 'menu') }}</a></li>
                <li class="menu-item"><a href="#">{{ 'help.logout' | trans({}, 'menu') }}</a></li>
            </ul>
            {% if app.user %}
                <h3>Conectado como {{ app.user.username }}</h3>
                <a href="{{ path('app_logout') }}" class="button is-danger">Cerrar sesión</a>
            {% else %}
                <a href="{{ path('app_login') }}" class="button is-link">Iniciar sesión</a>
            {% endif %}
        </aside>
    </div>
</div>
