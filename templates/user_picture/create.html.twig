{% extends 'layout.html.twig' %}
{% trans_default_domain 'users.es.yml' %}

{% block content %}
    <div class="columns is-align-items-center head">
        <div class="column is-narrow">
            <img src="{{ asset('images/logos/arcarus_purple.png') }}" alt="logo" class="image is-64x64">
        </div>
        <div class="column">
            <h1 class="title is-4 mb-2">subir foto</h1>
        </div>
        <div class="column">
            <a href="{{ path('users') }}" class="button is-dark">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-arrow-left"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M5 12l14 0" /><path d="M5 12l6 6" /><path d="M5 12l6 -6" /></svg>
                {{ 'going_back' | trans({}, 'home') }}
            </a>
        </div>
    </div>
    <div class="box">
        {% for message in app.flashes('success') %}
            <div class="notification is-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="notification is-danger">{{ message }}</div>
        {% endfor %}

        {{ form_start(form) }}
        <div class="field">
            {{ form_label(form.image, 'Image') }}
            <div class="control">
                {{ form_widget(form.image, {'attr': {'class': 'input'}}) }}
            </div>
            {{ form_errors(form.image) }}
        </div>

        <div class="field">
            <div class="control">
                <button class="button is-primary">Siguiente</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block title %}subir foto{% endblock %}
